<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Games"
        android:id="@+id/videoGamesButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family"
        android:id="@+id/familyButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Books"
        android:id="@+id/booksButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:id="@+id/foodButton"
        android:layout_above="@+id/familyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobbies"
        android:id="@+id/meButton"
        android:layout_above="@+id/booksButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meImage"
        android:background="@drawable/me"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/booksButton"
        android:layout_toRightOf="@+id/familyButton"
        android:layout_toEndOf="@+id/familyButton"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book1Image"
        android:background="@drawable/books"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/familyView"
        android:layout_alignEnd="@+id/familyView"
        android:layout_alignBottom="@+id/book2Image"
        android:layout_toRightOf="@+id/book2Image"
        android:layout_toEndOf="@+id/book2Image"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/book2Image"
        android:background="@drawable/favoritebook"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameImage"
        android:background="@drawable/games"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bookView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/booksButton"
        android:layout_alignEnd="@+id/booksButton"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food1Image"
        android:background="@drawable/favoritefood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/familyButton"
        android:layout_alignEnd="@+id/familyButton"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food2Image"
        android:background="@drawable/favoritefood2"
        android:visibility="gone"
        android:layout_alignRight="@+id/meButton"
        android:layout_alignEnd="@+id/meButton"
        android:layout_toRightOf="@+id/videoGamesButton"
        android:layout_toEndOf="@+id/videoGamesButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/familyImage"
        android:layout_alignParentTop="true"
        android:background="@drawable/family"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/bookView"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_text"
        android:id="@+id/bookView"
        android:layout_below="@+id/book1Image"
        android:layout_above="@+id/foodButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/meButton"
        android:layout_alignEnd="@+id/meButton"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/food_text"
        android:id="@+id/foodView"
        android:layout_above="@+id/foodButton"
        android:layout_alignTop="@+id/bookView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/familyView"
        android:layout_above="@+id/foodButton"
        android:text="@string/family_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bookView"
        android:layout_alignEnd="@+id/bookView"
        android:layout_alignTop="@+id/bookView"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameView"
        android:layout_above="@+id/foodButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bookView"
        android:text="@string/game_text"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/me_text"
        android:id="@+id/meView"
        android:layout_alignRight="@+id/booksButton"
        android:layout_alignEnd="@+id/booksButton"
        android:layout_above="@+id/foodButton"
        android:layout_alignTop="@+id/bookView"
        android:visibility="gone" />

</RelativeLayout>
